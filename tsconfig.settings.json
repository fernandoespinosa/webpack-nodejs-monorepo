{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "rootDir": ".",
    "baseUrl": "./packages",
    "paths": {
      "@foo/shared": ["./shared"]
    },

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "esnext.asynciterable"]
  }
}